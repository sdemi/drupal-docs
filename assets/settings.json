{
    "css.validate": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 2,
    "editor.autoIndent": true,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "off",
    "editor.detectIndentation": true,
    "files.associations": {
      "*.inc": "php",
      "*.module": "php",
      "*.install": "php",
      "*.theme": "php",
      "*.tpl.php": "php",
      "*.test": "php",
      "*.php": "php",
      "*.html": "twig",
    },
    "html.format.enable": true,
    "html.format.wrapLineLength": 80,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
      },

    "composer.enabled": true,
    // Path to the composer executable.
    "composer.executablePath": "C:\\ProgramData\\ComposerSetup\\bin\\composer.bat",
    // Path to the composer.json file.
    "composer.workingPath": "${workspaceFolder}",

    // Control whether phpcs is enabled for PHP files or not.
    "phpcs.enable": true,
    // The path to composer.json
    "phpcs.composerJsonPath": "c:\\Users\\serge_000\\AppData\\Roaming\\Composer\\vendor\\drupal\\coder",
    // Optional. The name or path of the coding standard to use. Defaults to the one set in phpcs global config.
    "phpcs.standard": "Drupal,DrupalPractice",

    "php.validate.enable": true,
    "php.validate.executablePath": "c:\\Apps\\XAMPP\\php\\php.exe",
    "php.validate.run": "onType",

    "php.suggest.basic": false,

    "php-docblocker.gap": true,
    "php-docblocker.useShortNames": true,

    // Default author tag
    "php-docblocker.author": {
      "name": "Awesome Developer",
      "email": "awesome.developer@awedeve.com"
    },

    "emmet.includeLanguages": {
      "twig": "html"
    },

    "csscomb.preset": "${workspaceFolder}\\.vscode\\.csscomb.json"
  }
